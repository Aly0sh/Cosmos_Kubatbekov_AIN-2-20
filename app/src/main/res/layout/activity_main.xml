<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/img"
    >
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/astronaut"
        android:layout_marginTop="20dp">
    </ImageView>

    <TextView
        android:id="@+id/tv_name_of_astronavt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Астронавт Шарипов Салижан"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="8dp"
        android:background="#99D415F6"
        android:textColor="@color/black"
        android:layout_marginTop="20dp">
    </TextView>

    <Button
        android:id="@+id/f_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#DB1EFB"
        android:text="Отправить пожелание"
        android:textColor="@android:color/black"
        android:textAllCaps="false"
        />

    <EditText
        android:id="@+id/txt"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="#f3f3f3"
        android:gravity="top"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Запишите ваше пожелание..."
        android:visibility="gone"/>

    <Button
        android:id="@+id/s_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Отправить пожелание"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:background="#DB1EFB"
        android:textColor="#ffffff"
        android:visibility="gone"
        />

</LinearLayout>

